<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C0C0C0"
    tools:context=".Controlling">

    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/on1"
        android:textColor="@android:color/black"
        android:text="Light 1 On"
        android:background="@android:color/white"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="60dp"
        />
    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/off1"
        android:textColor="@android:color/black"
        android:text="Light 1 Off"
        android:layout_toRightOf="@+id/on1"
        android:background="@android:color/white"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="20dp"
        />
    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/on2"
        android:textColor="@android:color/black"
        android:text="Light 2 On"
        android:background="@android:color/white"
        android:layout_below="@+id/on1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"
        />
    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/off2"
        android:textColor="@android:color/black"
        android:text="Light 2 Off"
        android:layout_toRightOf="@+id/on2"
        android:layout_below="@id/off1"
        android:background="@android:color/white"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        />



</RelativeLayout>